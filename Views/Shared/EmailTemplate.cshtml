@model GordonResponseModel

<!DOCTYPE html>
<html lang=""en"">
<head>
    <meta charset=""UTF-8"">
    <meta name=""viewport"" content=""width=device-width, initial-scale=1.0>
    <style>
        .email-container {
            background-color: #ffffff;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0,0,0,0.15);
        }

        .title {
            font-size: 24px;
            font-weight: bold;
            color: #2c3e50;
            margin-bottom: 20px;
        }

        .subtitle {
            font-size: 20px;
            font-weight: bold;
            color: #0d6efd;
            margin-top: 30px;
            border-bottom: 2px solid #0d6efd;
            padding-bottom: 5px;
        }

        .recipe-title {
            font-size: 18px;
            font-weight: bold;
            color: #2c3e50;
            margin-top: 30px;
            margin-bottom: 10px;
        }

        .ingredients-title, .instructions-title {
            font-size: 16px;
            font-weight: bold;
            color: #0d6efd;
            margin-top: 15px;
            margin-bottom: 10px;
        }

        .ingredients-list {
            padding-left: 34px;
        }

        .instructions-list li {
            margin-bottom: 10px;
        }

        .grocery-list {
            background-color: #ecf0f1;
            padding: 20px;
            border-radius: 8px;
            margin-top: 30px;
        }

        .grocery-list ul {
            columns: 2;
            -webkit-columns: 2;
            -moz-columns: 2;
            padding-left: 30px;
        }

        .jump-link {
            color: #0d6efd;
            text-decoration: none;
        }

        .jump-link:hover {
            text-decoration: underline;
        }

        hr {
            border: none;
            border-top: 2px solid #a5a5a5;
            margin: 30px 0;
        }

        .notes {
            background-color: #e7f1ff;
            border-left: 4px solid #0d6efd;
            padding: 15px;
            margin-bottom: 20px;
            border-radius: 0 8px 8px 0;
            font-style: italic;
            color: #2c3e50;
        }

        .feedback-link {
            display: inline-block;
            font-size: 16px;
            font-weight: bold;
            color: #0d6efd;
            text-decoration: none;
        }

        .feedback-link:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="email-container">
        <div class="title">Here are your recipes for the week! <a href="#grocery-list" class="jump-link">Jump to Grocery List</a></div>

        @if (Model.Notes != "")
        {
            <div class="notes">@Model.Notes</div>
        }

        @if (Model.BreakfastRecipes!.Count > 0) {
            <div class="subtitle">Breakfast</div>
            @foreach (var recipe in Model.BreakfastRecipes) {
                <div class="recipe-title">@recipe.DishName (@recipe.PrepareTime, @recipe.Servings servings)</div>
                <div class="ingredients-title">Ingredients:</div>
                <ul class="ingredients-list">
                    @foreach (var ingredient in recipe.Ingredients) {
                        <li>@ingredient</li>
                    }
                </ul>
                <div class="instructions-title">Instructions:</div>
                <ol class="instructions-list">
                    @foreach (var instruction in recipe.Instructions) {
                        <li>@instruction</li>
                    }
                </ol>
                @if (recipe != Model.BreakfastRecipes.Last())
                {
                    <hr> 
                }
            }
        }

        @if (Model.LunchRecipes!.Count > 0) {
            <div class="subtitle">Lunch</div>
            @foreach (var recipe in Model.LunchRecipes) {
                <div class="recipe-title">@recipe.DishName (@recipe.PrepareTime, @recipe.Servings servings)</div>
                <div class="ingredients-title">Ingredients:</div>
                <ul class="ingredients-list">
                    @foreach (var ingredient in recipe.Ingredients) {
                        <li>@ingredient</li>
                    }
                </ul>
                <div class="instructions-title">Instructions:</div>
                <ol class="instructions-list">
                    @foreach (var instruction in recipe.Instructions) {
                        <li>@instruction</li>
                    }
                </ol>
                @if (recipe != Model.LunchRecipes.Last())
                {
                    <hr> 
                }
            }
        }

        @if (Model.DinnerRecipes!.Count > 0) {
            <div class="subtitle">Dinner</div>
            @foreach (var recipe in Model.DinnerRecipes) {
                <div class="recipe-title">@recipe.DishName (@recipe.PrepareTime, @recipe.Servings servings)</div>
                <div class="ingredients-title">Ingredients:</div>
                <ul class="ingredients-list">
                    @foreach (var ingredient in recipe.Ingredients) {
                        <li>@ingredient</li>
                    }
                </ul>
                <div class="instructions-title">Instructions:</div>
                <ol class="instructions-list">
                    @foreach (var instruction in recipe.Instructions) {
                        <li>@instruction</li>
                    }
                </ol>
                @if (recipe != Model.DinnerRecipes.Last())
                {
                    <hr> 
                }
            }
        }

        <div id="grocery-list" class="grocery-list">
            <div class="subtitle" style="margin-top: 0px; margin-bottom: 10px">Grocery List</div>
            <ul>
                @foreach (var item in @Model.GroceryList) {
                    <li>@item</li>
                }
            </ul>
        </div>

        <div style="text-align: center; margin-top: 30px;">
            <a class="feedback-link" href="https://chefster.azurewebsites.net/overview" target="_blank">Tell us what you think about these recipes!</a>
        </div>    
    </div>
</body>
</html>