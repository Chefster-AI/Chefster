@{
    ViewData["Title"] = "Thank You";
    
    var hour = Model.GenerationTime.Hours % 12;
    if (hour == 0)
    {
        hour = 12;
    }
    var amPm = Model.GenerationTime.Hours < 12 ? "AM" : "PM";
    var time = $"{hour}:{Model.GenerationTime.Minutes:D2} {amPm}";

    string statusMessage;
    switch (Model.UserStatus)
    {
        case Chefster.Common.UserStatus.FreeTrial:
            statusMessage = "Success! Your 2-week free trail starts now!";
            break;
        case Chefster.Common.UserStatus.ExtendedFreeTrial:
            statusMessage = "Success! Your 4-week free trail starts now!";
            break;
        case Chefster.Common.UserStatus.Subscribed:
            statusMessage = "Success! Your Chefster subscription starts now!";
            break;
        case Chefster.Common.UserStatus.Unknown:
            statusMessage = "Success!";
            break;
        default:
            statusMessage = "Success!";
            break;
    }   
}

@model Chefster.ViewModels.ThankYouViewModel

<div class="d-flex justify-content-center align-items-center text-center fs-3 pt-5">
    <div class="vstack w-50 gap-3 mt-5 pt-5 border border-success border-3 rounded px-5 pb-5">
        <div class="text-success fs-1 fw-bold">
            @statusMessage
        </div>
        <div class="fs-4">
            Thank you for signing up for Chefster. We hope you appreciate this service as much as we appreciate you.
        </div>
        <hr>
        <div class="fw-bold">
            @Model.EmailAddress
        </div>
        <div>
            will receive weekly recipes at the following time:
        </div>
        <div class="fw-bold">
            @Model.GenerationDay, @time
        </div>
    </div>
</div>  
